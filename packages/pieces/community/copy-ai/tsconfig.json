{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@activepieces/pieces-framework": ["node_modules/@activepieces/pieces-framework"],
      "@activepieces/shared": ["node_modules/@activepieces/shared"],
      "@activepieces/pieces-common": ["node_modules/@activepieces/pieces-common"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

